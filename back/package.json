{
  "name": "ximpact-back",
  "version": "1.0.0",
  "main": "./src/index.js",
  "engines": {
    "node": ">=7.7.1"
  },
  "repository": {
    "url": "git@github.com:xebia-france/ximpact.git",
    "type": "git"
  },
  "author": "Benjamin Lacroix & Julien Smadja",
  "license": "MIT",
  "scripts": {
    "graphql:update-schema": "node scripts/update-schema.js > ../graphql.schema.json",
    "db:create": "DEV=true DynamoTablePrefix=dev node scripts/create-tables",
    "dev": "DEV=true DynamoTablePrefix=dev nodemon src/index.js",
    "lint": "eslint src tests",
    "lint:watch": "esw -w src tests scripts",
    "pretest": "npm run lint",
    "test": "DEV=true DynamoTablePrefix=tests istanbul --include-all-sources cover ./node_modules/mocha/bin/_mocha -- -R spec tests --recursive --timeout 100000",
    "itest": "istanbul --include-all-sources cover ./node_modules/mocha/bin/_mocha -- -R spec tests --recursive --timeout 100000",
    "posttest": "istanbul report clover",
    "coverage": "DEV=true DynamoTablePrefix=tests istanbul --include-all-sources cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --timeout 100000 --recursive -R spec tests && cat ./coverage/lcov.info | coveralls",
    "npm-check": "npm-check -E -u",
    "dynamo": "docker run -p 8000:8000 deangiberson/aws-dynamodb-local"
  },
  "dependencies": {
    "aws-sdk": "2.28.0",
    "bluebird": "^3.5.0",
    "cron": "^1.2.1",
    "email-templates": "^2.4.1",
    "express": "4.15.2",
    "express-graphql": "^0.6.3",
    "graphql": "^0.9.1",
    "handlebars": "^4.0.5",
    "joi": "^10.2.2",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "nodemailer": "3.1.7",
    "nodemailer-ses-transport": "^1.4.0",
    "request-promise": "^4.2.0",
    "require-text": "0.0.1",
    "uuid": "^3.0.1",
    "vogels": "^2.2.0"
  },
  "devDependencies": {
    "coveralls": "2.12.0",
    "eslint": "3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-check": "^5.4.0",
    "superagent": "^3.5.0",
    "superagent-promise": "^1.1.0"
  }
}
