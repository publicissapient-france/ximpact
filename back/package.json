{
  "name": "ximpact-back",
  "version": "1.0.0",
  "main": "./src/index.js",
  "engines": {
    "node": ">=7.7.1"
  },
  "repository": {
    "url": "git@github.com:xebia-france/ximpact.git",
    "type": "git"
  },
  "author": "Benjamin Lacroix & Julien Smadja",
  "license": "MIT",
  "scripts": {
    "db:migrate:up": "db-migrate up --config database/database.json --migrations-dir database/migrations",
    "db:migrate:reset": "db-migrate reset --config database/database.json --migrations-dir database/migrations && npm run db:migrate:up",
    "graphql:schema:update": "node scripts/update-schema.js > ../graphql.schema.json",
    "dev": "DEV=true nodemon src/index.js",
    "start": "node src/index.js",
    "lint": "eslint src tests",
    "lint:watch": "esw -w src tests scripts",
    "pretest": "npm run lint && npm run db:migrate:reset",
    "test": "DEV=true istanbul --include-all-sources cover ./node_modules/mocha/bin/_mocha -- -R spec tests --recursive --bail",
    "itest": "istanbul --include-all-sources cover ./node_modules/mocha/bin/_mocha -- -R spec tests --recursive",
    "posttest": "istanbul report clover",
    "coverage": "DEV=true istanbul --include-all-sources cover mocha --report lcovonly -- --recursive -R spec tests && cat ./coverage/lcov.info | coveralls",
    "npm-check": "npm-check -E -u",
    "postgresql": "docker run -p 5432:5432 -e POSTGRES_PASSWORD=mysecretpassword -d postgres",
    "package": "zip -r ximpact-back.zip package.json src config",
    "deploy": "eb deploy"
  },
  "dependencies": {
    "aws-sdk": "2.36.0",
    "bluebird": "3.5.0",
    "cors": "^2.8.3",
    "cron": "1.2.1",
    "db-migrate": "^0.10.0-beta.20",
    "email-templates": "2.5.4",
    "express": "4.15.2",
    "express-graphql": "0.6.4",
    "graphql": "0.9.2",
    "graphql-date": "^1.0.3",
    "graphql-type-json": "^0.1.4",
    "handlebars": "4.0.5",
    "knex": "0.12.9",
    "lodash": "4.17.4",
    "moment": "2.18.1",
    "node-sass": "^4.5.2",
    "nodemailer": "3.1.8",
    "nodemailer-ses-transport": "1.5.0",
    "pg": "^6.1.5",
    "request-promise": "4.2.0",
    "require-text": "0.0.1"
  },
  "devDependencies": {
    "coveralls": "2.13.0",
    "db-migrate": "0.10.0-beta.20",
    "db-migrate-pg": "0.1.11",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.1.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-watch": "3.0.1",
    "handlebars": "4.0.6",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "npm-check": "5.4.0",
    "require-text": "0.0.1",
    "superagent": "3.5.2",
    "superagent-promise": "1.1.0"
  }
}
